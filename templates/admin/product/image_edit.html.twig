{% extends 'admin/base.html.twig' %}

{% block title %}Edit Image Product{% endblock %}

{% block content %}
<h1>{{ product.title }}</h1>

<form action="{{ path('admin_product_iupdate', {'id': id}) }}" method="post" enctype="multipart/form-data">
    Select image to upload:
    <input name="productid" value="{{ id }}" type="number" readonly>
    <input type="file" name="imagename" id="fileToUpload"><br>
    <input type="submit" value="Upload Image" name="submit">
</form>

<a href="javascript:openWin('{{ path('admin_product_iedit', {'id': product.id}) }}','','toolbar-no,location=no,directories=0,status=no,top=100,left=200,manuBar=no,scrollBars=no,resizable=no,width=900,height=600');">
    {% if product.image!=null %}

        <img src="{{ asset ('uploads') }}/images/{{ product.image }}" height="100" width="150">
    {% endif %}
    {% endblock %}
