<div class="col-md-12">
    <form method="post">
        <div class="form-group col-md-6 ">
            <label>İsim(Name)</label>
            <input type="text" class="form-control" name="user[name]" value="{{ user.name }}"
                   placeholder="İsim(Name)">
        </div>
        <div class="form-group col-md-6 ">
            <label>email</label>
            <input type="email" class="form-control" name="user[email]" value="{{ user.email }}"
                   placeholder="email">
        </div>
        <div class="form-group col-md-6 ">
            <label>password</label>
            <input type="password" class="form-control" name="user[password]" value="{{ user.password }}"
                   placeholder="password">
        </div>


        <div class="form-group col-md-6">
            <label> Aktif Durum(Status)</label>
            <select name="user[status]" class="form-control">
                <option>{{ user.status }}</option>
                <option>True</option>
                <option>False</option>
            </select>
        </div>
        <div class="form-group col-md-6">
            <label> Üye Tipi(Type)</label>
            <select name="user[roles]" class="form-control">
                {#<option>{{ user.roles }}</option>#}
                <option>ROLE_ADMIN</option>
                <option>ROLE_USER</option>
                <option>ROLE_POWER</option>
                <option>ROLE_MEMBER</option>

            </select>
        </div>
        <div class="row col-md-12">

            <div class="row">
                <div class="col-md-4">
                    <label ></label>
                    <button type="submit" class="btn btn-primary "> <i class="glyphicon glyphicon-chevron-left"></i>Kaydet</button>
                </div>
            </div>
        </div>
    </form>
</div>