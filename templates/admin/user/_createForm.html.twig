{% extends 'admin/base.html.twig' %}

{% block content %}
    <div id="page-wrapper">
    <div id="page-inner">
    <div class="row">
    <div class="col-md-12">

    <h1 class="page-head-line">Üye Ekle

    </h1>
    <div class="col-md-12">
        <!--    Hover Rows  -->
        <div class="panel panel-default">
            <div class="panel-heading">
                <a href="{{ path('admin_user') }}" class="btn btn-primary" ><i class="glyphicon glyphicon-chevron-left"></i> GERİ</a>

            </div>
            <div class="panel-body">

                <form method="post">
                    <div class="form-group col-md-6 ">
                        <label>İsim(Name)</label>
                        <input type="text" class="form-control" name="user[name]"
                               placeholder="İsim(Name)">
                    </div>
                    <div class="form-group col-md-6 ">
                        <label>email</label>
                        <input type="email" class="form-control" name="user[email]"
                               placeholder="email">
                    </div>
                    <div class="form-group col-md-6 ">
                        <label>password</label>
                        <input type="password" class="form-control" name="user[password]"
                               placeholder="password">
                    </div>


                    <div class="form-group col-md-6">
                        <label> Aktif Durum(Status)</label>
                        <select name="user[status]" class="form-control">

                            <option>True</option>
                            <option>False</option>
                        </select>
                    </div>
                    <div class="form-group col-md-6">
                        <label> Üye Tipi(Type)</label>
                        <select name="user[roles]" class="form-control">
                            <option>ROLE_ADMIN</option>
                            <option>ROLE_USER</option>
                            <option>ROLE_POWER</option>
                            <option>ROLE_MEMBER</option>

                        </select>
                    </div>
                    <div class="row col-md-12">

                        <div class="row">
                            <div class="col-md-4">
                                <label ></label>
                                <button type="submit" class="btn btn-primary "> <i class="glyphicon glyphicon-chevron-left"></i>Kaydet</button>
                            </div>
                        </div>
                    </div>
                </form>
                <!-- //form ekle  -->

            </div>
        </div>
        <!-- End  Hover Rows  -->
    </div>

    </div>


    </div>
        <!-- /. PAGE INNER  -->
    </div>


{% endblock %}