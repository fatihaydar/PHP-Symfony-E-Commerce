{% extends 'admin/base.html.twig' %}


{% block content %}
<div id="page-wrapper">
    <div id="page-inner">
        <div class="row">
            <div class="col-md-12">

                {#<h1 class="page-head-line">ÜRÜN Listesi#}
                {#</h1>#}
                <div class="col-md-12">
                    <!--    Hover Rows  -->
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            {#<a href="{{ path('admin_product_new') }}" class="btn btn-primary"><i class="glyphicon glyphicon-plus"></i> ÜRÜN Ekle</a>#}

                        </div>
                        <div class="panel-body">
                            <div class="table-responsive">


                                <table class="table" >
                                    <thead>
                                    <tr>
                                        <th>Adı / Soyadı</th>
                                        <th>Fiyatı</th>
                                        <th>Şehir</th>
                                        <th>Telefon</th>
                                        <th>Sipariş Bilgisi</th>
                                        <th>Not</th>
                                        <th></th>
                                    </tr>
                                    </thead>
                                    <tbody>
                                    {% for order in orders %}
                                        <tr>
                                            <td>{{ order.name }}</td>
                                            <td>{{ order.amount }} TL</td>

                                            <td>{{ order.city }}</td>
                                            <td>{{ order.phone }}</td>
                                            <td>{{ order.shipinfo }}</td>
                                            <td>{{ order.note }}</td>
                                            <td>
                                                <a class="btn btn-primary " href="{{ path('admin_orders_show', {'id': order.id}) }}">Siparişi Görüntüle</a>

                                            </td>
                                        </tr>
                                    {% else %}
                                        <tr>
                                            <td colspan="13">no records found</td>
                                        </tr>
                                    {% endfor %}
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                    <!-- End  Hover Rows  -->
                </div>

            </div>
        </div>
    </div>

    {% endblock %}
