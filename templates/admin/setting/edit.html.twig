                        {#</select>#}
                        {#</div>#}
                        {#</div>#}

                    </div>

                    <div class="tab-pane fade" id="nav-profile" role="tabpanel" aria-labelledby="nav-profile-tab">
                        <div class="form-group row">
                            <div class="col-md-6">
                                <label>Email Server</label>
                            </div>
                            <div class="col-md-6">
                                <input type="text" class="form-control" name="setting[smtpserver]" value="{{  setting.smtpserver  }}">
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-md-6">
                                <label>Email</label>
                            </div>
                            <div class="col-md-6">
                                <input type="text" class="form-control" name="setting[smtpemail]" value="{{  setting.smtpemail  }}">
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-md-6">
                                <label>Password</label>
                            </div>
                            <div class="col-md-6">
                                <input type="text" class="form-control" name="setting[smtppassw]" value="{{  setting.smtppassw  }}">
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-md-6">
                                <label>SMTP Port</label>
                            </div>
                            <div class="col-md-6">
                                <input type="text" class="form-control" name="setting[smtpport]" value="{{  setting.smtpport  }}">
                            </div>
                        </div>
                    </div>

                          <div class="tab-pane fade" id="nav-contact" role="tabpanel" aria-labelledby="nav-contact-tab">
                        <textarea id="textarea1" name="setting[aboutus]" rows="10" cols="100">{{ setting.aboutus }}</textarea>
                    </div>

                    <div class="tab-pane fade" id="nav-about" role="tabpanel" aria-labelledby="nav-about-tab">
                        <textarea id="textarea2" name="setting[contact]" rows="10" cols="100">{{ setting.contact }}</textarea>
                    </div>

                    <div class="tab-pane fade" id="nav-about2" role="tabpanel" aria-labelledby="nav-about2-tab">
                        <textarea id="textarea3" name="setting[referances]" rows="10" cols="100">{{ setting.referances }}</textarea>

                    </div>
                </div>

            </div>
        </div>
    <br>
        <div class="col-md-2">
            <button type="submit"style="margin-left: 700px" class="btn btn-primary btn-block">Kaydet</button>
        </div>


    </div>
</form>


