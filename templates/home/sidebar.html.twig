<style>
    ul#category-list, #category-list ul {
        width: 100%; /* Main Menu width */
        border: 1px solid #CCCCCC;
        list-style: none;
        margin: 0;
        padding: 0;
        z-index: 9;
    }

    #category-list li {
        margin: 0;
        padding: 0;
        position: relative;
        background-color: #595858; /*fallback color*/
        background-color: rgba(255, 255, 255, 0.8);
        transition: background 0.5s;
    }

    #category-list li:hover {
        background-color: rgba(255, 255, 255, 0.5);
    }

    #category-list a {
        font: normal 16px "Helvetica Neue";
        border-top: 1px solid #8e8d8d;
        display: block;
        color: #444444;
        text-decoration: none;
        line-height: 53.6px;
        padding-left: 22px;
        position: relative;
    }

    #category-list li:first-child a {
        border-top: 0;
    }

    #category-list a.arrow::after {
        content: '';
        position: absolute;
        display: inline;
        top: 50%;
        margin-top: -4px;
        right: 8px;
        border-width: 4px;
        border-style: solid;
        border-color: transparent transparent transparent black;
        transition: border-color 0.5s;
    }

    #category-list li a.arrow:hover::after {
        border-color: transparent transparent transparent red;
    }

    /*Sub level menu items
    ---------------------------------------*/
    #category-list li ul {
        min-width: 180px; /* Sub level menu min width */
        position: absolute;
        display: none;
        left: 100%;
        top: 0;
    }

    #category-list li:hover > ul {
        display: block;
    }
</style>

            <div class="col-sm-2" style="float:left;margin-left: 350px;width: 300px;">
                <div class="leftbar p-r-20 p-r-0-sm">
                    <div class="category-nav">
                        <!--  -->
                        <h4 class="m-text14 p-b-7">
                            Kategoriler
                        </h4>
                        <ul class="category-list">
                            <li class="dropdown side-dropdown">
                                {% for cat in cats %}
                                    {{ cat|raw }}
                                {% endfor %}
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
