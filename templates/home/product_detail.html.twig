{% extends 'base.html.twig' %}

{% block title %} {{ dataa[0].title }} {% endblock %}
{% block keywords %} {{ dataa[0].keywords }} {% endblock %}
{% block description %} {{ dataa[0].description }} {% endblock %}


{% block leftsidebar %} {{ include('home/sidebar.html.twig') }} {% endblock %}
{% block content %}

    <style>
        #cssSlider {
            width: 500px;
            height: 300px;
            overflow: hidden;
            border: 10px solid #666;
        }

        #sliderImages {
            width : 4000px;
            height: 300px;
            overflow: hidden;

            /* animation duration: 16s : 5x ~3s display image + 5x ~0.2s slide */
            animation: slide 16s infinite;
            -moz-animation: slide 16s infinite;
            -webkit-animation: slide 16s infinite;
            -o-animation: slide 16s infinite;
        }

        #sliderImages img {
            float: left;
        }

        @keyframes slide{
            0%{margin-left: 0px;}
            17%{margin-left: 0px;}
            20%{margin-left: -800px;}
            37%{margin-left: -800px;}
            40%{margin-left: -1600px;}
            57%{margin-left: -1600px;}
            60%{margin-left: -2400px;}
            77%{margin-left: -2400px;}
            80%{margin-left: -3200px;}
            97%{margin-left: -3200px;}
            100%{margin-left: 0px;}
        }

        @-moz-keyframes slide{
            0%{margin-left: 0px;}
            17%{margin-left: 0px;}
            20%{margin-left: -800px;}
            37%{margin-left: -800px;}
            40%{margin-left: -1600px;}
            57%{margin-left: -1600px;}
            60%{margin-left: -2400px;}
            77%{margin-left: -2400px;}
            80%{margin-left: -3200px;}
            100%{margin-left: -3200px;}
        }

        @-webkit-keyframes slide{
            0%{margin-left: 0px;}
            17%{margin-left: 0px;}
            20%{margin-left: -800px;}
            37%{margin-left: -800px;}
            40%{margin-left: -1600px;}
            57%{margin-left: -1600px;}
            60%{margin-left: -2400px;}
            77%{margin-left: -2400px;}
            80%{margin-left: -3200px;}
            100%{margin-left: -3200px;}
        }

        @-o-keyframes slide{
            0%{margin-left: 0px;}
            17%{margin-left: 0px;}
            20%{margin-left: -800px;}
            37%{margin-left: -800px;}
            40%{margin-left: -1600px;}
            57%{margin-left: -1600px;}
            60%{margin-left: -2400px;}
            77%{margin-left: -2400px;}
            80%{margin-left: -3200px;}
            100%{margin-left: -3200px;}
        }

    </style>











    <div class="container" style="margin-top: 1px">
        <div class="flex-w flex-sb">
            <div class="w-size13 p-t-30 respon5">
                {#<div class="wrap-slick3 flex-sb flex-w">#}
                    {#<div class="wrap-slick3-dots"><a href="#"> <img src="{{ asset('uploads') }}/images/{{ data[0].image }}" alt="" ></a></div>#}
                    {#{% for rs in images %}#}
                        {#<div class="item">#}
                            {#<a href="#"> <img src="{{ asset('uploads') }}/images/{{ rs.image }}"  style="width:100%"></a>#}
                        {#</div>#}
                    {#{% endfor %}#}
                {#</div>#}
                <div id="cssSlider">
                <div id="sliderImages">
                    {% for rs in images %}

                     <img src="{{ asset('uploads') }}/images/{{ rs.image }}" alt=""  style="width: 700px" height="200px" >
                    {% endfor %}
                    <div style="clear:left;"></div>
                </div>
            </div>





            </div>

            <div class="w-size14 p-t-30 respon5">
                <h4 class="product-detail-name m-text16 p-b-13">
                    {{ data[0].detail|raw }}
                </h4>

                <span class="m-text17">
					 {{ data[0].pprice|raw }} TL
				</span>


                <!--  -->
                <div class="p-t-33 p-b-60">
                    <div class="flex-m flex-w p-b-10">
                        <div class="s-text15 w-size15 t-center">

                        </div>


                    </div>

                    <div class="flex-m flex-w">
                        <div class="s-text15 w-size15 t-center">

                        </div>


                    </div>
                    <form name="shopcart" class="form-horizontal qtyFrm" action="{{ path('shopcart_new') }}" method="post">
                    <div class="flex-r-m flex-w p-t-10">
                        <div class="w-size16 flex-m flex-w">
                            <div class="flex-w bo5 of-hidden m-r-22 m-t-10 m-b-10">



                                    Adet
                                    <input type="number" name="shopcart[quantity]" class="span6" value="1" placeholder="Adet" max="{{ data[0].amount }}">
