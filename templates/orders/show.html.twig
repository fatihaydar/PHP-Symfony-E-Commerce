{% extends 'base.html.twig' %}

{% block title %}Orders{% endblock %}
{% block sidebar %} {{ include('home/userleftsidebar.html.twig') }} {% endblock %}

{% block content %}
<div style="width: 1200px;margin-left: 600px">
    <h1>Orders</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ order.id }}</td>
            </tr>
            <tr>
                <th>Userid</th>
                <td>{{ order.userid }}</td>
            </tr>
            <tr>
                <th>Amount</th>
                <td>{{ order.amount }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ order.name }}</td>
            </tr>
            <tr>
                <th>Address</th>
                <td>{{ order.address }}</td>
            </tr>
            <tr>
                <th>City</th>
                <td>{{ order.city }}</td>
            </tr>
            <tr>
                <th>Phone</th>
                <td>{{ order.phone }}</td>
            </tr>
            <tr>
                <th>Shipinfo</th>
                <td>{{ order.shipinfo }}</td>
            </tr>
            <tr>
                <th >Status</th>
                <td > {{ order.status }}</td>
            </tr>
            <tr>
                <th>Note</th>
                <td>{{ order.note }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('orders_index') }}"><button class="btn btn-success">Geri Dön</button></a>

    <a href="{{ path('orders_edit', {'id': order.id}) }}"><button class="btn btn-primary">Düzenle</button></a>
    <br>
   {{ include('orders/_delete_form.html.twig') }}
    <br><br><br><br><br>
</div>
{% endblock %}
