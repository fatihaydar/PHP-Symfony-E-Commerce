<form id="checkout-form" class="clearfix" name="order" action="{{ path('orders_new') }}" method="post" style="width: 400px; margin-left: 800px">
    <div class="col-md-12">
        <div class="billing-details">

         <br>
            <div class="form-group" style="width: 800px">
                <label>Ödenecek Tutar: </label>
                <input class="input" type="text" name="orders[amount]" value="{{ total }}" placeholder="Total">
            </div>
            <div class="form-group" style="width: 800px">
                <input class="input" type="text" name="orders[name]" value="{{ app.user.name }}" placeholder="Adı Soyadı">
            </div>
            <div class="form-group" style="width: 800px">
                <input class="input" type="text" name="orders[phone]" value="{{ app.user.phone }}" placeholder="Telefon">
            </div>
            <div class="form-group" style="width: 800px">
                <input class="input" type="city" name="orders[city]" value="{{ app.user.city }}" placeholder="Şehir">
            </div>

            <div class="form-group" style="width: 800px">
                <input class="input" type="text" name="orders[address]" value="{{ app.user.address }}" placeholder="Adres">
            </div>



            <label>KREDİ KARTI BİLGİLERİ</label>
            <div class="form-group">
                <input class="input" type="text" name="cardholdername" placeholder="KREDİ KARTI ADI SOYADI">
            </div>
            <div class="form-group">
                <input class="input" type="number" name="cartnumber" placeholder="KART NUMARASI">
            </div>
            <div class="form-group">
                <input class="input" type="text" name="cart" placeholder="SON KULLANMA TARİHİ AA/YY">
            </div>
            <div class="form-group">
                <input class="input" type="number" name="secure" placeholder="GÜVENLİK KODU">
            </div>

            <input type="hidden" name="token" value="{{ csrf_token('form-order') }}"/>
            <label class="col-sm-2 control-label">  </label>
            <div class="control-group" class="col-sm-5">
                <input class="flex-c-m size2 bg1 bo-rad-23 hov1 m-text3 trans-0-4" type="submit"  style="margin-left:1%"  value="Satın Al"/>
            </div>

        </div>
    </div>
</form>